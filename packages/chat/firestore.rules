rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isInRoom(roomId) {
      return request.auth.uid != null && request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.joinedUserIds;
    }

    match /rooms/{roomId} {
      allow read: if true;
      allow write: if true;
    }

    match /rooms/{roomId}/messages/{messageId} {
      allow read: if isInRoom(roomId);
      allow write: if isInRoom(roomId) && request.auth.uid == request.resource.data.userId && request.resource.data.roomId == roomId;
    }

    match /notificationTokens/{tokenId} {
      allow read: if true;
      allow write: if true;
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.id;
    }
  }
}