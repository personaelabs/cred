FROM danieltehrani/creddd-indexer-base:latest

WORKDIR /usr/src/app

ENV SCCACHE_GCS_BUCKET=creddd-sccache
ENV SCCACHE_GCS_KEY_PATH=/etc/secrets/optimum-surface-375822-bbf8ad9f3a08.json
ENV SCCACHE_GCS_RW_MODE=READ_WRITE

COPY packages/indexer-rs packages/indexer-rs
COPY packages/protobufs packages/protobufs
COPY Cargo.toml.docker Cargo.toml
COPY Cargo.lock Cargo.lock

ENV RUST_LOG=info

CMD ["cargo", "run", "--release", "--bin", "indexer"]

